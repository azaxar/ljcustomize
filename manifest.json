{
    "manifest_version": 2,
    "background": {
        "scripts": ["enhance.js", "background.js"],
        "persistant": false
    },
    "name": "Custom livejournal features",
    "version": "0.1",
    "content_scripts": [
    {
        "matches": ["http://*/*"],
        "js": ["enhance.js", "client.js"],
        "css": ["enhance.css"],
        "run_at": "document_end"
    }
    ],
    "options_page": "options.html",
    "permissions": [ "http://*/*" ],
    "update_url": "http://clients2.google.com/service/update2/crx",
    "default_locale": "en"
}
